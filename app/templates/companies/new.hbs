<div class='col-sm-10'>
	<div class='panel panel-default'>
		<div class='panel-body'>
			<form class="form-vertical">
				<div class="form-group">
					{{input type="text" class="form-control" value=model.title placeholder="Название"}}
				</div>
				<div class="form-group">
					{{input type="text" class="form-control" value=model.address placeholder="Адрес"}}
				</div>
				<div class="form-group">
					{{input type="text" class="form-control" value=model.ogrn placeholder="ОГРН"}}
				</div>
				<div class="form-group">
					{{input type="text" class="form-control" value=model.inn placeholder="ИНН"}}
				</div>
				<div class="form-group">
					{{input type="text" class="form-control" value=model.kpp placeholder="КПП"}}
				</div>	
				<div class="form-group">
					{{input type="text" class="form-control" value=model.paymentAccount placeholder="Рассчетный счет"}}
				</div>
				<div class="form-group">
					{{input type="text" class="form-control" value=model.correctionalAccount placeholder="Корреспондентский счет"}}
				</div>	
				<div class="form-group">
					{{input type="text" class="form-control" value=model.bankName placeholder="Название банка"}}
				</div>	
				<div class="form-group">
					{{input type="text" class="form-control" value=model.bankBik placeholder="БИК"}}
				</div>
				<div class="form-group">
					<div class="col-sm-offset-4 col-sm-10">
						<button type="submit" class="btn btn-default" {{action 'add_new'}}>Добавить компанию</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>